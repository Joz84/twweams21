<div class="container" id="profile-show">
  <div class="persos-info-container">
    <div class="profile-left">
      <% @gender = @user.gender == 'male' ? 'men' : 'women' %>

      <div id="profile-picture">
        <%= image_tag 'elements/scotch.png', alt: 'scotch', id: "scotch"%>
        <%= @user.gender == 'male' ? (image_tag 'elements/Avatar bleu-01.png', alt: 'avatar', id: "avatar") : (image_tag 'elements/Avatar rose-01.png', alt: 'avatar', id: "avatar") %>
      </div>
      <div id="birthday-icon">
        <%= image_tag 'elements/birth-dates/01 JANV/0101.png', alt: 'birthday-icon' %>
      </div>

      <div id="info-list">
        <h1 class="playfair"><%= @user.full_name %></h1><br>
        <p id="birthday"><%= @user.birthday.strftime("%d/%m/%y") %></p><br>
        <p id="location"><%= @user.location %></p>
        <%= link_to 'Messenger', root_path, id: 'messenger-btn', class: @user.gender == 'male' ? 'color-men' : 'color-women' %>
      </div>
    </div>
    <div class="profile-right">
      <div class="profile-right-top">
        <h2>About <%= @user.first_name %></h2>
        <p><%= @user.summary %></p>
      </div>
      <div class="profile-right-bottom <%= @gender %>">
        <h2><b>Preferences</b></h2>
        <p>Favorite movie : <b><em><%= @user.movie %></em></b></p>
        <p>Favorite music : <b><em><%= @user.music %></em></b></p>
        <p>Favorite book : <b><em><%= @user.book %></em></b></p>
      </div>
    </div>
  </div>
  <div id="separate-bar">
    <%= image_tag 'elements/picto carte-01.png', alt: 'map' %>
  </div>
  <div id="map"></div>
</div>

<%= render 'shared/map' %>
