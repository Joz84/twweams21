<div class="form-sign-up">
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>
    <div class="row">
      <div class="col-xs-6">
        <%= f.input :first_name, autofocus: true, required: true %>
      </div>
      <div class="col-xs-6">
        <%= f.input :last_name, required: true %>
      </div>
    </div>
    <div class="display-none">
      <%= f.input :birthday, start_year: Date.today.year - 110, end_year: Date.today.year, selected: DateTime.parse(session[:birthday]) %>
    </div>
    <div class="row">
      <div class="col-xs-8">
        <%= f.input :city, required: true %>
      </div>
      <div class="col-xs-4">
        <%= f.input :country, required: true %>
      </div>
    </div>
    <%= f.input :gender, collection: User.genders.keys, as: :radio_buttons, item_label_class: "radio-inline", item_wrapper_tag: false, label: false %>
    <%= f.input :email, required: true %>
    <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
    <%= f.input :password_confirmation, required: true %>
    <%= f.input :bio, required: true %>
    <%= f.input :book, required: true %>
    <%= f.input :movie, required: true %>
    <%= f.input :music, required: true %>

    <div class="form-actions">
      <%= f.button :submit, "Sign up", style: 'width: 100%;' %>
    </div>
  <% end %>
</div>
